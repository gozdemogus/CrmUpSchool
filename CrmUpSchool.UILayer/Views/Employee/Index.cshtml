@model List<CrmUpSchool.EntityLayer.Concrete.Employee>

@{
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}
<h1>Personeller</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Düzenle</th>
        @*<th>Görevler</th>*@
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName @item.EmployeeSurname</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
            @*<td><a href="/Employee/EmployeeTask/EmployeeTaskListById/@item.EmployeeID" class="btn btn-outline-dark">Görevler</a></td>*@


            @{
                if (item.EmployeeStatus == true)
                {
                    <td><a href="/Employee/ChangeStatusToFalse/@item.EmployeeID" class="btn btn-outline-danger">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="/Employee/ChangeStatusToTrue/@item.EmployeeID" class="btn btn-outline-warning">Aktif Yap</a></td>

                }
            }

        </tr>
    }
</table>
<a href="/Employee/AddEmployee/" class="btn btn-primary" style="width:200px">Yeni Personel</a>