@model Customer
@{
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" asp-for="CustomerName" class="form-control" />
    <br />
    <label>Müşteri Soyadı</label>
    <input type="text" asp-for="CustomerSurname" class="form-control" />
    <br />
    <label>Müşteri Mail</label>
    <input type="text" asp-for="CustomerPhone" class="form-control" />
    <br />
   
    <button class="btn btn-info">Kaydet</button>
</form>