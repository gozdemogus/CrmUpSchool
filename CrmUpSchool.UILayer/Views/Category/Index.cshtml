@model List<CrmUpSchool.EntityLayer.Concrete.Category>
@{
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category//" class="btn btn-warning">Durum</a></td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Category/AddCategory/" class="btn btn-primary" style="width:200px">New Category</a>