@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyad</th>
        <th>Mail</th>
       <!--<th>Cinsiyet</th>-->
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.Email</td>
        @*  <td>@item.Gender</td>*@
            <td><a href="/User/DeleteById/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/User/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/User/Detail/@item.Id" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Register/Index/" class="btn btn-primary me-2" style="width:200px">Yeni Üye Kaydı</a>